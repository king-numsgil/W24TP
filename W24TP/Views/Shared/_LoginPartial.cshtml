@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="nav-item">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null, new {title = "Manage", @class = "nav-link"})
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </li>
            </ul>
        }
    </li>
}
else
{
    <li class="nav-item">
        @Html.ActionLink("Register", "Register", "Account", null, new {@class = "nav-link"})
    </li>
    <li class="nav-item">
        @Html.ActionLink("Log in", "Login", "Account", null, new {@class = "nav-link"})
    </li>
}