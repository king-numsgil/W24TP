@model IEnumerable<W24TP.Controllers.UserDisplay>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<table class="table">
    <tr>
        <th>UserName</th>
        <th># Posts</th>
        <th># Replies</th>
        <th>Last Activity</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbrSub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbrRep)
            </td>
            <td>
                @W24TP.Helpers.PrettyDate.Print(item.LastDate ?? DateTime.Now)
            </td>
        </tr>
    }

</table>